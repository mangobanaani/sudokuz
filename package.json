{
  "name": "sudokuz",
  "version": "1.0.0",
  "description": "A modern, multi-size Sudoku game featuring 4×4, 6×6, and 16×16 grids for all skill levels",
  "author": "mangobanaani",
  "license": "MIT",
  "homepage": "https://github.com/mangobanaani/sudokuz",
  "repository": {
    "type": "git",
    "url": "https://github.com/mangobanaani/sudokuz.git"
  },
  "keywords": [
    "sudoku",
    "puzzle",
    "game",
    "typescript",
    "nextjs",
    "react",
    "tailwind",
    "mobile",
    "responsive"
  ],
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari --project=iphone-se --project=galaxy-s8",
    "test:tablet": "playwright test --project=tablet-chrome",
    "test:mobile-only": "playwright test e2e/mobile-devices.spec.ts e2e/mobile-touch.spec.ts",
    "test:mobile:headed": "playwright test --project=mobile-chrome --headed"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.11",
    "next": "^15.4.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.3",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.9",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.4.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.4"
  }
}
